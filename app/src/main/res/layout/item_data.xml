<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="88dp"
                                             android:id="@+id/root_list_item"
                                             xmlns:tools="http://schemas.android.com/tools"
                                            >

    <ImageView
            android:id="@+id/imv_list_item_circle"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@color/colorAccent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:layout_marginTop="2dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="2dp" app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
            style="@style/Text.Primary"
            android:id="@+id/txt_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="To jest Autor"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="60dp"
            android:layout_marginStart="60dp" app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            style="@style/Text.Secondary"
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="To jest tytul"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="62dp"
            android:layout_marginStart="62dp" android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"/>


</android.support.constraint.ConstraintLayout>