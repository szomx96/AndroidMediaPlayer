<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.DetailActivity">

    <ImageView
            android:id="@+id/imv_colored_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/div_center"
            android:transitionName="@string/transition_drawable" />

    <View
            android:id="@+id/cont_colored_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/div_center"
            android:background="@color/colorPrimaryDark"


    />

    <TextView
            style="@style/Text.Primary"
            android:id="@+id/txt_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/div_center"
            tools:text="To jest Autor"

    />

    <View
            android:id="@+id/div_center"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_centerVertical="true"
    />

    <TextView
            style="@style/Text.Secondary"
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div_center"
            tools:text="To jest tytuÅ‚"
    />
    <Button
            android:text="Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="67dp" android:layout_alignParentBottom="true" android:id="@+id/buttonPlay"
            android:layout_marginBottom="98dp" android:layout_marginTop="86dp" android:layout_below="@+id/txt_title"
            android:layout_alignParentEnd="true" android:layout_marginEnd="229dp"/>

</RelativeLayout>